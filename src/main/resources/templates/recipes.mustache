<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Recipes</title>
</head>
<body>

{{#recipes}}
    <div>
        <h1>{{name}}</h1>
        <p>{{description}}</p>

        <ul>
            {{#ingredients}}
                <li>{{name}} - {{amount}} {{unit}}</li>
            {{/ingredients}}
        </ul>
    </div>
{{/recipes}}

</body>
</html>